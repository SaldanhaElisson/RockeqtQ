<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perguntas e Reposta</title>

    <!-- styles -->
    <link rel="stylesheet" href="/styles/globa.css">
    <link rel="stylesheet" href="/styles/room.css">
    <link rel="stylesheet" href="/styles/modal.css">

    <!-- fontes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div id="room" class="content">
        <header>
            <a href="/">
                <img src="/img/logo.svg" alt="Rockeqt.Q logo" srcset="">
            </a>
            <div class="buttons">
                <div class="button outlined" id="room-id" data-id="<%= roomId %>">
                    <%= roomId %>
                    <img src="/img/copy.svg" alt="copiar um numero" >
                </div>
                <a href="/creat-pass" class="button">
                    <img src="/img/users-white.svg" alt="Criar Sala">
                    Criar sala
                </a>
            </div>
        </header>
        <main>
            <section id="question-form">
                <h2>Faça sua pergunta</h2>
                <form action="/question/create/<%= roomId %> " method="post">
                    <label for="question" class="sr-only">O que você quer perguntar?</label>
                    <textarea name="question" id="question"  placeholder="O que você quer perguntar?"></textarea>

                    <footer>
                        <div>
                            <img src="/img/lock_black.svg" alt="cadeado">
                            Esta pergunta é anônima
                        </div>
                        <button>Enviar</button>
                    </footer>
                </form>
            </section>

            <section id="questions">
                <h2 class="sr-only">Perguntas da comunidade</h2>
                <div class="questions">
                    <%  if (isQuestion){ %>
                        <%- include('parts/noQuestion') %>     
                    <% } %>    

                    <% questions.forEach(questions => { %> 
                        <div class="question-wrapper">
                            <div class="question-content">
                                <div class="user">
                                    <img src="/img/user.svg" alt="avatar">
                                </div>
                                <div class="question">
                                    <p><%= questions.titulo %> </p>
                                </div>
                            </div>
                            <div class="action">
                                <a href="#" class="check" data-id="<%= questions.id %> ">
                                    <img src="/img/check .svg" alt=" marcar como lida">
                                    Marcar como lida
                                </a>
                                <a href="" class="delete" data-id="<%= questions.id %>">
                                    <img src="/img/trash 1.svg" alt=" excluir">
                                    Excluir
                                </a>
                            </div>
                        </div>
                    <% }); %>

                   

                  <% questionsRead.forEach(questionRead => { %>
                    <div class="question-wrapper read">
                        <div class="question-content">
                            <div class="user">
                                <img src="/img/user.svg" alt="avatar">
                            </div>
                            <div class="question">
                                <p><%= questionRead.titulo %></p>
                            </div>
                        </div>
                        <div class="action">
                            
                            <a href="" class="delete" data-id="<%= questionRead.id %>">
                                <img src="/img/trash 1.svg" alt=" excluir">
                                Excluir
                            </a>
                        </div>
                    </div>
                   <% }) %>  

                   

                </div>
            </section>
        </main>
    </div>

    <!-- MODAL -->

    <div class="modal-wrapper">
        <div class="modal">
            <h2>Exclui perguntar</h2>
            <p>Tem certeza que você deseja excluir esta pergunta?</p>

            <form action="#" method="post">
                <label class="sr-only">Digite sua senha</label>
                <input type="password"  id="password" name="password" placeholder="Digite sua senha"> 

                <div class="buttons ">
                    <div class="button grey cancel">Cancelar</div>
                    <button class="buttonForInner"></button>
                </div>

            </form>
        </div>
        
    </div>
    <script src="/scripts/main.js" defer type ="module"></script>
    
</body>
</html>